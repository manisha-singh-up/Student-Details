<div style = "position: absolute;top: 25%;left: 25%; border-style: groove;border-color: black;">
<table border=1>
   <caption style="background-color:grey; font-size:14px; font-weight:bold;">
        Listing students
   </caption>
  <thead>
    <tr>
      <th>Roll NO</th>
      <th>Name</th>
      <th>Blood Group</th>
      <th>Department</th>
      <th>image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @students.each do |student| %>
  <tr>
    <td><%= student.roll_no %></td>
    <td><%= student.name %></td>
    <td><%= student.blood_group %></td>
    <td><%= student.department %></td>
    <td><%= link_to image_tag(student.image.url(:small)), student.image.url  %></td>
    <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Destroy', student, method: :delete,
                                     data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
</div>
